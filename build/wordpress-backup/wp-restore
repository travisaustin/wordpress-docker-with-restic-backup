#!/bin/bash

# Adapted from https://theme.fm/a-shell-script-for-a-complete-wordpress-backup/

rm -rf /var/www/html/*

restic -vv restore latest --target / --host $RESTIC_BACKUP_HOSTNAME

mysql --user=$MYSQL_USER --password=$MYSQL_PASSWORD --host=$MYSQL_HOST $MYSQL_DATABASE < /$MYSQL_DATABASE.sql

rm /$MYSQL_DATABASE.sql
