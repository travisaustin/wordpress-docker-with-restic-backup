#!/bin/bash

if [ -z ${DISABLE+x} ];
then
    echo "Performing backup";
else
    echo "Backups not enabled; exiting"
    exit;
fi


# Adapted from https://theme.fm/a-shell-script-for-a-complete-wordpress-backup/

mysqldump --user=$MYSQL_USER --password=$MYSQL_PASSWORD --host=$MYSQL_HOST $MYSQL_DATABASE --no-tablespaces --add-drop-table -c > /$MYSQL_DATABASE.sql

# Test if the repo is yet initialized
restic snapshots

# If the repo is no initialized, initialize it
if [ $? -eq 1 ]
then
    restic init
fi

restic -vv backup --host $RESTIC_BACKUP_HOSTNAME /var/www/html/ /$MYSQL_DATABASE.sql

rm /$MYSQL_DATABASE.sql

#restic --verbose forget --prune --keep-last 5 --keep-hourly 24 --keep-daily 7 --keep-weekly 5 --keep-monthly 12 --keep-yearly 3